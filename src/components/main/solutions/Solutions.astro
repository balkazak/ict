---
import SolutionCard from "./SolutionCard.astro";
import image1 from "@/assets/solutions/1.jpg";
import image2 from "@/assets/solutions/2.jpg";
import image3 from "@/assets/solutions/3.jpg";
---

<section class="relative min-h-screen overflow-hidden bg-[#1A1A3A]">
  <!-- Cyber grid background -->
  <div class="absolute inset-0 opacity-10">
    <div class="cyber-grid-diagonal"></div>
  </div>

  <!-- Animated lines -->
  <div class="absolute inset-0 overflow-hidden">
    {Array.from({ length: 5 }).map((_, i) => (
      <div
        class="cyber-line absolute h-[1px] w-full"
        style={{
          top: `${i * 20}%`,
          left: "0",
          animationDelay: `${i * 0.5}s`,
        }}
      ></div>
    ))}
  </div>

  <!-- Main content -->
  <div class="relative z-10 container mx-auto max-w-6xl px-4 py-32">
    <div class="mb-20 text-center">
      <div class="cyber-badge-large mx-auto mb-6" data-aos="zoom-in">
        <div class="cyber-badge-large-glitch"></div>
        <span class="relative z-10 text-2xl font-bold text-cyan-400">Наши решения</span>
      </div>
      <h2 
        class="cyber-heading text-4xl font-bold text-white md:text-5xl"
        data-aos="fade-up"
        data-aos-delay="200"
      >
        Технологии будущего для устойчивого развития
      </h2>
    </div>

    <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
      {[
        {
          title: "ESG-стратегии и отчетность",
          image: image1,
          description: "Комплексные решения для оценки и внедрения ESG-стратегий",
          points: [
            "Подготовка ESG-отчетов",
            "Разработка дорожных карт",
            "Оценка экологических рисков",
          ],
          delay: 400,
        },
        {
          title: "Углеродные проекты",
          image: image2,
          description: "Реализация проектов по стандартам VERRA и Gold Standard",
          points: [
            "Разработка проектов",
            "Верификация и валидация",
            "IOT мониторинг CO2",
          ],
          delay: 600,
        },
        {
          title: "Инновационные решения",
          image: image3,
          description: "Передовые технологии для управления экосистемами",
          points: [
            "Цифровой двойник",
            "Предиктивная аналитика",
            "Умный мониторинг",
          ],
          delay: 800,
        },
      ].map((solution) => (
        <div data-aos="fade-up" data-aos-delay={solution.delay}>
          <SolutionCard {...solution} />
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .cyber-grid-diagonal {
    background-image: linear-gradient(
      45deg,
      rgba(0, 255, 255, 0.1) 1px,
      transparent 1px
    ),
    linear-gradient(
      -45deg,
      rgba(0, 255, 255, 0.1) 1px,
      transparent 1px
    );
    background-size: 40px 40px;
    width: 100%;
    height: 100%;
    animation: gridScroll 20s linear infinite;
  }

  .cyber-line {
    background: linear-gradient(
      90deg,
      transparent,
      rgba(0, 255, 255, 0.3),
      transparent
    );
    animation: scanline 3s linear infinite;
  }

  .cyber-badge-large {
    position: relative;
    width: fit-content;
    padding: 1rem 3rem;
    background: rgba(0, 255, 255, 0.1);
    border: 1px solid rgba(0, 255, 255, 0.2);
    border-radius: 4px;
    overflow: hidden;
  }

  .cyber-badge-large-glitch {
    position: absolute;
    inset: 0;
    background: rgba(0, 255, 255, 0.2);
    animation: badgeGlitch 4s infinite;
  }

  .cyber-heading {
    position: relative;
    text-shadow: 
      0 0 10px rgba(0, 255, 255, 0.5),
      0 0 20px rgba(0, 255, 255, 0.3),
      0 0 30px rgba(0, 255, 255, 0.2);
  }

  @keyframes gridScroll {
    0% { transform: translateY(0); }
    100% { transform: translateY(40px); }
  }

  @keyframes scanline {
    0% { transform: translateX(-100%); opacity: 0; }
    50% { transform: translateX(0); opacity: 1; }
    100% { transform: translateX(100%); opacity: 0; }
  }

  @keyframes badgeGlitch {
    0%, 100% { clip-path: polygon(0 0, 100% 0, 100% 100%, 0 100%); }
    20% { clip-path: polygon(0 15%, 100% 15%, 100% 30%, 0 30%); }
    40% { clip-path: polygon(0 45%, 100% 45%, 100% 65%, 0 65%); }
    60% { clip-path: polygon(0 60%, 100% 60%, 100% 75%, 0 75%); }
  }
</style>
