---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
  image: ImageMetadata;
  description: string;
  points: string[];
  route?: string;
  clickable?: boolean;
}

const { title, image, description, points, route, clickable } = Astro.props;
const isEquipmentCard = title === "Лабораторное и промышленное оборудование";
---

<div class="eco-card group">
  <!-- Card frame effects -->
  <div class="eco-card-frame">
    <div class="eco-card-lines"></div>
    <div class="eco-card-corner-bl"></div>
    <div class="eco-card-corner-tr"></div>
  </div>

  <!-- Card content -->
  <div class="relative z-10 h-full">
    <figure class="relative h-48">
      <div class="absolute inset-0 z-10 bg-gradient-to-t from-[#F0FAF9] to-transparent opacity-80"></div>
      <div class="eco-scan-effect"></div>
      <Image
        src={image}
        alt={title}
        class="h-full w-full transition-transform duration-700 group-hover:scale-100"
      />
    </figure>

    <div class="p-6">
      <h3 class="eco-card-title mb-4 text-xl font-bold text-[#0A7B76]">{title}</h3>
      <p class="mb-6 text-[#0A7B76]/80">{description}</p>
      
      {isEquipmentCard ? (
        <div class="equipment-categories grid grid-cols-2 gap-4">
          {[
            { name: "Вода", route: "/monitoring/water/quality" },
            { name: "Воздух", route: "/monitoring/air" },
            { name: "Земля", route: "/monitoring/soil" },
            { name: "Растение", route: "/monitoring/plant" }
          ].map((category) => (
            <div 
              class="equipment-category cursor-pointer transform transition-all duration-300 hover:scale-105 bg-gradient-to-r from-[#0A7B76]/10 to-[#0A7B76]/5 rounded-lg p-4 border border-[#0A7B76]/20 hover:border-[#0A7B76]/40 hover:shadow-lg"
              data-route={category.route}
            >
              <span class="text-[#0A7B76] font-semibold text-center block">{category.name}</span>
            </div>
          ))}
        </div>
      ) : (
        <ul class="space-y-3">
          {points.map((point) => (
            <li class="eco-list-item flex items-start gap-3">
              <Icon
                name="mdi:check-circle"
                class="mt-1 h-5 w-5 flex-shrink-0 text-[#0A7B76]"
              />
              <span class="text-[#0A7B76]/90">{point}</span>
            </li>
          ))}
        </ul>
      )}
    </div>
  </div>
</div>

<style>
  .eco-card {
    position: relative;
    background: rgba(255, 255, 255, 0.7);
    border: 1px solid rgba(10, 123, 118, 0.2);
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.3s ease;
    backdrop-filter: blur(5px);
  }

  .eco-card:hover {
    transform: translateY(-5px);
    box-shadow: 
      0 0 20px rgba(10, 123, 118, 0.1),
      0 0 40px rgba(10, 123, 118, 0.1);
  }

  .eco-card-frame {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .eco-card-lines {
    position: absolute;
    inset: 0;
    background: 
      linear-gradient(90deg, transparent 50%, rgba(10, 123, 118, 0.1) 50%),
      linear-gradient(transparent 50%, rgba(10, 123, 118, 0.1) 50%);
    background-size: 4px 4px;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .eco-card:hover .eco-card-lines {
    opacity: 1;
  }

  .eco-card-corner-bl,
  .eco-card-corner-tr {
    position: absolute;
    width: 20px;
    height: 20px;
    border: 2px solid rgba(10, 123, 118, 0.4);
    transition: all 0.3s ease;
  }

  .eco-card-corner-bl {
    left: -1px;
    bottom: -1px;
    border-right: 0;
    border-top: 0;
  }

  .eco-card-corner-tr {
    right: -1px;
    top: -1px;
    border-left: 0;
    border-bottom: 0;
  }

  .eco-scan-effect {
    position: absolute;
    width: 100%;
    height: 2px;
    background: rgba(10, 123, 118, 0.5);
    filter: blur(1px);
    animation: scan 4s ease-in-out infinite;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .eco-card:hover .eco-scan-effect {
    opacity: 1;
  }

  .eco-card-title {
    position: relative;
    display: inline-block;
  }

  .eco-card-title::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -2px;
    width: 100%;
    height: 1px;
    background: rgba(10, 123, 118, 0.4);
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.3s ease;
  }

  .eco-card:hover .eco-card-title::after {
    transform: scaleX(1);
    transform-origin: left;
  }

  .eco-list-item {
    position: relative;
    padding-left: 1rem;
    transition: transform 0.2s ease;
  }

  .eco-list-item:hover {
    transform: translateX(5px);
  }

  .equipment-category:hover {
    background: linear-gradient(135deg, rgba(10, 123, 118, 0.15), rgba(10, 123, 118, 0.08));
  }

  @keyframes scan {
    0% { top: 0; }
    50% { top: 100%; }
    100% { top: 0; }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const equipmentCategories = document.querySelectorAll('.equipment-category');
    equipmentCategories.forEach(category => {
      category.addEventListener('click', (e) => {
        e.stopPropagation();
        const route = category.getAttribute('data-route');
        if (route) {
          window.location.href = route;
        }
      });
    });
  });
</script>
